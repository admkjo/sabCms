        <div class="box-content padded">
            <div class="tab-content">
                <div id="list" class="tab-pane box active" style="font-size: 1.0em; padding: 5px;">
                    <div class="tab-pane box active" id="list">
                        <div class="box" style="margin-bottom: -1px">
                            <div class="box-header">
                                <span class="title">Comment</span>
                            </div>
                        </div>
                        <h:panelGroup layout="block" style="border: 1px solid #F0F0F1; padding: 10px 5px">
                            <h:form id="contentForm" class="form-horizontal" prependId="false" enctype="multipart/form-data" >

                                <p:growl  life="8"/>  
                                <p:messages/>
                                <h:panelGroup id="contentAdd" layout="block" rendered="#{contentController.formShow}">
                                    <style>
                                        .controls{margin-left: 0px!important}
                                    </style>
                                    <div class="span6">
                                        <br/>

                                        <div class="control-group">
                                            <div class="controls">
                                                <label class="control-label">Comment Title</label>
                                                <h:inputText value="#{commentController.userComment.commentTitle}" style="width: 350px; margin-right: 5px"/>
 </div>
                                        </div>
                                        <div class="control-group">
                                            <div class="controls">
                                                <label class="control-label">Username</label>
                                                <h:inputText value="#{commentController.userComment.userId}" style="width: 350px; margin-right: 5px"/>


                                            </div>
                                        </div>
                                        <h:panelGroup layout="block">

                                        <div class="control-group">
                                            <div class="controls">
                                                <label class="control-label">Comment Message</label>
                                               <div style="width: 550px">
                                                   <h:inputTextarea value="#{commentController.userComment.userCommentMessage}"  styleClass="jqte-test"></h:inputTextarea>
                                                </div>
                                                <script>
                                                    $('.jqte-test').jqte();
                                                </script>

                                            </div>
                                        </div>
                                        </h:panelGroup>

                                         

<!--                                        <h:panelGroup layout="block">
                                            <div class="controls">
                                                <label class="control-label">Response</label>
                                                <div style="width: 550px">
                                                    <h:inputTextarea value="#{commentController.userComment.userCommentResponse}"  styleClass="jqte-test"></h:inputTextarea>
                                                </div>
                                                <script>
                                                    $('.jqte-test').jqte();
                                                </script>
                                            </div>
                                        </h:panelGroup>-->
                                        <div class="control-group">
                                            <div class="controls">
                                                <label class="control-label">Show Comment</label>
                                                <h:selectOneMenu value="#{commentController.userComment.isPublish}" style="width: 350px">
                                                    <f:selectItem itemLabel="No" itemValue="NO"/>
                                                    <f:selectItem itemLabel="YES" itemValue="YES"/>
                                                </h:selectOneMenu>
                                            </div>
                                        </div>
                                           
                                    </div>
                                    <div class="form-actions ">
                                        <h:commandButton class="btn btn-primary margr10" value="Edit Comment"
                                                         action="#{commentController.editComment()}"/>
                                        <h:commandButton class="btn btn-primary margr10" value="Reset Form"
                                                         action="#{commentController.refresh()}" rendered="#{contentController.inEditMode}"/>
                                        <h:commandButton class="btn btn-danger margr10" value="Delete Content" rendered="#{contentController.inEditMode}"
                                                         action="#{commentController.deleteComment()}" onclick="return confirm('Are you sure you want to delete?')"/>

                                    </div>
                                     

                                </h:panelGroup>
                                <h:dataTable value="#{commentController.userCommentList}"  var="o" styleClass="dTable responsive dataTable" >
                                     

                                    <h:column>
                                        <f:facet name="header">Comment Date</f:facet> 
                                        <h:commandLink value="#{o.commentDate}" class="btn-link"/>
                                    </h:column> 
                                    <h:column>
                                        <f:facet name="header">Comment Title</f:facet> 
                                        <h:commandLink value="#{o.commentTitle}" class="btn-link"/>
                                    </h:column> 
                                    <h:column>
                                        <f:facet name="header">Username</f:facet> 
                                        <h:commandLink value="#{o.userId}" class="btn-link"/>
                                    </h:column> 
                                    
                                    
                                    <h:column>
                                        <f:facet name="header">Is Published</f:facet>
                                            #{o.isPublish}
                                    </h:column>
                                     
                                    <h:column>
                                        <f:facet name="header">Options</f:facet>
                                        <h:commandLink rel="tooltip"  class="btn btn-blue" style="padding: 0px 10px!important"
                                                       action="#{commentController.editing}">
                                            <i class="icon-wrench"></i>Select
                                            <f:ajax render=":contentForm"/>
                                            <f:setPropertyActionListener target="#{commentController.userComment}" value="#{o}" />
                                        </h:commandLink>
                                    </h:column>
                                </h:dataTable>
                            </h:form>

                        </h:panelGroup>
                    </div>
                </div>
            </div>
        </div>
    </div>

</h:panelGroup>